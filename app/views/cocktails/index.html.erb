<!-- banner -->
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.7),rgba(0,0,0,0.7)), url(https://static.independent.co.uk/s3fs-public/thumbnails/image/2018/05/22/13/gin-cocktails.jpg?w968h681);">
  <div class="container">
    <h1>MR. Cocktail</h1>
    <div class="description">
      <p>There's a drink for every mood or occasion. Find your favorite cocktail recipes below.
      Or think outside the glass and try a brand new drink. Your new favorite could be a shake or stir away. </p>
    </div>
    <%= link_to 'Create cocktail', new_cocktail_path, class: "btn" %>
  </div>
</div>

<!-- cards -->
<div class="container-padded">
  <h1>Look at some cocktails</h1>
  <div class="container-fluid">
    <div class="cards">
      <% @cocktails.each do |cocktail| %>
        <div class="col-sm-4 col-md-3">
          <%=  link_to cocktail_path(cocktail), class: 'card-link' do %>
            <div class="card" style="background-image: url('https://dishesdelish.com/wp-content/uploads/2016/04/The-Negroni-Aperitif-Cocktail-9.jpg')">
              <div class='cocktail-name'>
                  <%= cocktail.name %>
              </div>
              <div class="cocktail-delete">
                <%= link_to (cocktail_path(cocktail)), method: :delete, data: { confirm: "Are you sure?"} do %>
                  <i class="far fa-trash-alt"></i>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
<!-- footer -->
<div class="footer">
  <div class="footer-links">
    <a href="#"><i class="fab fa-github"></i></a>
    <a href="#"><i class="fab fa-instagram"></i></a>
    <a href="#"><i class="fab fa-facebook"></i></a>
    <a href="#"><i class="fab fa-twitter"></i></a>
    <a href="#"><i class="fab fa-linkedin"></i></a>
  </div>
  <div class="footer-copyright">
    Mr. Cocktail
  </div>
</div>
