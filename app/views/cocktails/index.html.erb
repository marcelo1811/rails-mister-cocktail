<!-- banner -->
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.7),rgba(0,0,0,0.7)), url(https://static.independent.co.uk/s3fs-public/thumbnails/image/2018/05/22/13/gin-cocktails.jpg?w968h681);">
  <div class="container">
    <h1>MR. Cocktail</h1>
    <div class="description">
      <p>
        <span id="banner-typed-text"></span>
       </p>
    </div>
    <%= link_to 'Create cocktail', new_cocktail_path, class: "btn" %>
  </div>
</div>

<!-- cards -->
<div class="container-padded background-gray">
  <h1>Look at some cocktails</h1>
  <div class="container-fluid">
    <div class="cards-cocktail">
      <% @cocktails.each do |cocktail| %>
        <div class="col-sm-6 col-md-3">
          <%=  link_to cocktail_path(cocktail), class: 'card-link' do %>
            <div class="card-cocktail" style="background-image: url('<%= cl_image_path cocktail.photo %>')">
              <div class='cocktail-name'>
                  <%= cocktail.name %>
              </div>
              <div class="cocktail-delete">
                <%= link_to (cocktail_path(cocktail)), method: :delete, data: { confirm: "Are you sure?"} do %>
                  <i class="far fa-trash-alt"></i>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
